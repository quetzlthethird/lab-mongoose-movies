<h2>
    Add a movie!
</h2>

<form action="/movies" method="POST">
     <p><label for="title">Movie Name: </label>
     <input type="text" name="title" id="title"></p>

    <p><label for="genre">Genre: </label>
    <input type="text" name="genre" id="genre"></p>

    <p><label for="plot">Movie Plot: </label>
    <input type="text" name="plot" id="plot"></p>

{{!-- iteration 9 - prefilled cast --}}
    <p>
        <label for="cast">Cast: </label>
        <select name="cast" multiple id="">
            {{#each cast}}
                <option value="{{_id}}">{{name}}</option>
            {{/each}}   
        </select>
    </p>

    <button type="submit">Add your movie!</button>

</form>