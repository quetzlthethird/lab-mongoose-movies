{{!-- iteration 11 -editing a movie --}}

<h2>
    Edit the movie!
</h2>
{{#with movies}}
    <form action="/movies/edit/{{_id}}" method="POST">
        <p><label for="title">Movie Name: </label>
        <input type="text" name="title" id="title" value="{{title}}"></p>

        <p><label for="genre">Genre: </label>
        <input type="text" name="genre" id="genre" value="{{genre}}"></p>

        <p><label for="plot">Movie Plot: </label>
        <input type="text" name="plot" id="plot" value="{{plot}}"></p>

        {{!-- iteration 9 - prefilled cast --}}
        <p>
        <label for="cast">Cast: </label>
        <select name="cast" multiple id="">
            {{#each cast}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
        </p>

        <button type="submit">Edit your movie!</button>

    </form>
{{/with}}